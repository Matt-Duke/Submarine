{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"-I",
				"${workspaceFolder}/Processor/include",
				"-I",
				"${workspaceFolder}/Processor/libs",
				"${file}",
				"${workspaceFolder}/Processor/libs/minihdlc/minihdlc.c",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-lhiredis_vip",
				"-lpthread",
				"-lserialport"
				],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}